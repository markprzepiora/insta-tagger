{{outlet}}

<ul class="select-tags">
  {{#each model.categories as |choice|}}
    <li><label>
      {{#if choice.tags.length}}
        {{input type="checkbox" checked=choice.selected}}
      {{/if}}

      {{#if choice.tags.length}}
        {{choice.label}}
      {{else}}
        <b>----- {{choice.label}} -----</b>
      {{/if}}
    </label></li>
  {{/each}}
</ul>

<h2>Output <small>({{selectedTagsCount}} tags)</small></h2>

<button {{action "copy"}}>Copy</button><br />

<textarea class="tags js-tags">{{selectedTagString}}</textarea>
